<section class="container border pt-5 pb-3 col-11 col-lg-6">
    <div class="title-text">
        <h1 class="display-3 text-center">Create Account</h1>
        <p class="form-text text-center text-danger">
            <%#= errorMessage %> Please enter only Correct details
        </p>
    </div>

    <form action="/register" method="post" class="my-5">
        <h2 class="display-2 my-3 text-center">Create Account</h2>

        <div class="input-grp pb-5 col-12 my-5" id="personalDetails">
            <h3 class="display-5">Personal Details</h3>
            <div class="form-floating">
                <input
                    class="form-control"
                    type="text"
                    name="name"
                    id="username"
                    placeholder="username"
                />
                <label for="username">Username</label>
            </div>
            <div class="form-floating">
                <input
                    class="form-control"
                    type="email"
                    name="emailAddress"
                    id="emailAddress"
                    placeholder="email Address"
                />
                <label for="emailAddress">Email Address</label>
            </div>
            <div class="form-floating">
                <input
                    class="form-control"
                    type="password"
                    name="password"
                    id="password"
                    placeholder="password"
                />
                <label for="password">Password</label>
            </div>
            <div class="form-floating">
                <input
                    class="form-control"
                    type="password"
                    name="confirmPassword"
                    id="confirmPassword"
                    placeholder="confirmPassword"
                />
                <label for="confirmPassword">Confirm Password</label>
            </div>
            <button class="btn btn-outline-success mt-3 mb-5 d-block float-end">
                Continue
            </button>
        </div>

        <div class="input-grp col-12 my-5" id="businessDetails">
            <h3 class="display-5">Business Details</h3>
            <div class="form-floating">
                <input
                    class="form-control"
                    type="text"
                    name="businessName"
                    id="businessName"
                    placeholder="businessName"
                />
                <label for="businessName">Business Name</label>
            </div>
            <div class="form-floating">
                <input
                    class="form-control"
                    type="tel"
                    name="phoneNumber"
                    id="phoneNumber"
                    placeholder="phoneNumber"
                />
                <label for="phoneNumber">Phone Number</label>
            </div>
            <div class="form-floaing mt-4 col-12">
                <label class="" for="businessDesc">Business Description</label>
                <textarea
                    class="col-12 form-control"
                    type="text"
                    name="businessDesc"
                    id="businessDesc"
                    maxlength="200"
                    rows="5"
                    placeholder="Few words about your Business"
                ></textarea>
            </div>
        </div>

        <p class="">
            Already have an account? <a href="/login">Sign in!</a>
        </p>

        <button class="btn btn-lg col-12 btn-outline-success" id="btnRegister">
            Register
        </button>
    </form>
</section>
