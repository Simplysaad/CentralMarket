<section class="container border pt-5 pb-3  col-11 col-lg-6 ">
  <div class="title-text">
    <h1 class="display-3 text-center">
      Create Account
    </h1>
    <p class="form-text text-center text-danger">
      <%#= errorMessage %>
      Please enter only Correct details
    </p>

  </div>

  <form id="form" method="post" action="/register" class="form px-3 pt-4 my-5">
    <div class="form-floating my-3">
      <input name="name" required placeholder="" id="name" class="form-control">
      <label for="name">Your full name</label>
      <p class="text-danger text-error form-text">
        Name must be at least 2 characters
      </p>
    </div>

    <div class="form-floating my-3">
      <input name="username" required placeholder="" id="username" class="form-control">
      <label for="username">Enter username</label>
      <p class="form-text text-danger text-error">
        This username already exists
      </p>
    </div>

    <div class="form-floating my-3">
      <input name="emailAddress" required placeholder="" id="emailAddress" class="form-control">
      <label for="emailAddress"> Email address</label>
      <p class="form-text text-danger text-error">
        This email already exists
      </p>
    </div>
    <div class="form-floating my-3">
      <input name="password" required type="password" placeholder="" id="password" class="form-control">
      <label for="password">Password</label>
      <p class="form-text text-danger text-error">
        Password must be at least 8 characters
      </p>

    </div>
    <div class="form-floating my-3">
      <input name="passwordConfirm" required type="password" placeholder="" id="passwordConfirm" class="form-control">
      <label for="passwordConfirm">Confirm Password</label>
      <p class="form-text text-danger text-error">
        Passwords do not match
      </p>
    </div>
    <button class="btn col-12 btn-lg mt-4 btn-outline-success" id="btnSubmit">
      Submit
    </button>
    <p class="form-text my-2 mx-0">Already have an account?<a class="m-0" href="/login">Sign in!</a></p>
  </form>

</section>