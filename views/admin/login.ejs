<section class="container border pt-5 pb-3  col-11 col-lg-6 ">
  <div class="title-text">
    <h1 class="display-3 text-center">
      Login
    </h1>
    <p class="form-text text-center text-danger">
      <%# = errorMessage %>
    </p>

  </div>

  <!-- <form method="post" action="/login" class="px-3 py-4 my-5"> -->
  <form method="post" class="px-3 py-4 my-5" id="loginForm">
    <div class="form-floating my-3">
      <input name="username" required placeholder="" id="username" class="form-control">
      <label for="username">username or email address</label>
    </div>

    <div class="form-floating my-3">
      <input name="password" required placeholder="" id="password" class="form-control">
      <label for="password">Password</label>
    </div>

    <button class="btn col-12 btn-lg mt-4 btn-outline-success" id="btnLogin">
      Submit
    </button>
    <p class="form-text">
      Don't have an account yet? <a href="/register">Create One!</a>
    </p>
  </form>

</section>