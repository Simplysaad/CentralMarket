<section class="container">
    <form class="my-5" action="/login" method="post">
        <h2 class="display-2 my-3 text-center">Sign In</h2>
        <div class="form-floating">
            <input
                class="form-control"
                placeholder=""
                required
                type="email"
                id="emailAddress"
            />
            <label for="emailAddress">Email Address</label>
        </div>
        <div class="form-floating">
            <input
                class="form-control"
                placeholder=""
                type="password"
                required
                id="password"
            />
            <label for="password">Password</label>
        </div>

        <p class="">
            Don't have an account? <a href="/register.html">Create one!</a>
        </p>
        <button class="btn btn-lg btn-outline-success col-12">Login</button>
    </form>
</section>
