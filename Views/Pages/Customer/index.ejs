<section id="featuredCombos" class="overflow-hidden my-4">
    <div class="category-heading">
        <h4 class="display-6 text-heading">Featured Combos</h4>
    </div>
    <div class="d-flex p-2 gap-4 overflow-scroll">
        <% newArrivals.forEach((product, index)=>{ %> 
        <div
            class="card d-flex flex-column gap-2 flex-md-row col-9 col-md-8 col-lg-5"
        >
            <div class="card-image col-md-6">
                <img
                    src="/IMG/image-1.jpg"
                    class="img-fluid w-100 h-100"
                    alt="<% product.name %>"
                />
            </div>
            <div class="card-info my-2 flex-column d-flex p-2">
                <h4 class="fs-5 cart-title"><%= product.name %></h4>
                <p class="fs-6 fw-light card-description">
                    <%= product.description %>
                </p>
                <% if(product.vendorId){ %>
                <div
                    class="vendor-info col- gap-2 d-flex justify-content-start align-items-center"
                >
                    <i class="fa fa-map-marker"> </i>

                    <span class="fs-6"> <%= product.vendorId.name %> </span>
                </div>
                <% } %>
                <div
                    class="d-flex py-3 justify-content-between align-items-center"
                >
                    <div class="product-rating d-flex gap-0 align-items-center">
                        <div class="rating-stars">
                          <% for(i=0; i<product.averageRating; i++){ %>
                            <i class="fa fa-star"> </i>
                          <% } for(i=0; i<(5-product.averageRating); i++){ %>
                            <i class="far fa-star"> </i>
                          <% } %>
                        </div>
                        <span class="px-2"> (220)</span>
                    </div>
                    <span class="fs-6 card-price fw-bold"><% "$" +  product.price %></span>
                </div>
                <button data-product-id="<%= product._id %>" class="cta btn btn-cart btn-dark m-2 btn-cta">
                
                <span class="">
                <%= checkCart(product) ? `${checkCart(product).quantity} in cart`: "Get Now" %>
                </span>
                </button>
            </div>
        </div>
        <% }) %>
    </div>
</section>


<section id="newArrivals" class="product-list">
    <div class="category-heading my-4">
        <h4 class="display-6 text-heading">
            New arrivals
        </h4>
    </div>
    <div class="d-flex p-1 gap-3 overflow-scroll">
        <% newArrivals.forEach((product, index)=>{ %>
        <div
            class="border card d-flex flex-column gap-2 col-7 col-md-5 col-lg-2"
        >
            <div class="card-image">
                <img
                    src="/IMG/image-1.jpg"
                    class="img-fluid w-100 h-100"
                    alt="<%= product.name %>"
                />
            </div>
            <div class="card-info my-2 flex-column d-flex p-2">
                <h4 class="fs-6 text-capitalize cart-title">
                    <%= product.name %>
                </h4>
                <% if(product.vendorId){ %>
                <div
                    class="vendor-info text-muted col- gap-2 d-flex justify-content-start align-items-center"
                >
                    <i class="fa fa-map-marker"> </i>

                    <span class="fs-6 fw-light">
                        Fantech trading
                    </span>
                </div>
                <% } %>
                <div
                    class="d-flex py-3 flex-colmn justify-content-between align-items-center"
                >
                    <div
                        class="product-rating d-flex align-items-center"
                    >
                        <div class="rating-stars">
                          <% for(i=0; i<product.averageRating; i++){ %>
                            <i class="fa fa-star"> </i>
                          <% } %>
                          <% for(i=0; i<(5 - product.averageRating); i++){ %>
                            <i class="far fa-star"> </i>
                          <% } %>
                        </div>

                        <!-- <span class="px-2 text-muted">
                            4.9
                        </span> -->
                    </div>
                    <span class="fs-6 card-price">
                      <%= "$" + product.price %>
                    </span>
                </div>
                <div class="cta btn-group">
                    <button
                        data-product-id="<%= product._id %>"
                        class="btn btn-cart <%= checkCart(product) ? 'btn-dark': 'btn-outline-dark' %> justify-content-center align-items-center d-flex gap-2"
                    >
                        <i class="fa fa-shopping-cart"> </i>
                        <span class="">
                        <%= checkCart(product) ? `${checkCart(product).quantity} in cart`: "Add to cart" %>
                        
                        </span>
                    </button>
                    <button data-product-id="<%= product._id %>" class="btn btn-wish <%= checkWishList(product) ?'btn-dark': 'btn-outline-dark' %> ">
                        <i class="<%= checkWishList(product) ?'far': 'fa' %> fa-heart"> </i>
                    </button>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</section>
<script src="/JS/homepage.js"></script>