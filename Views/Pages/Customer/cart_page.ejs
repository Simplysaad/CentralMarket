<section
    class="col-12 container-fluid mh-100 d-flx flex-column justify-content-center align-items-center"
>
    <% if(cart.length > 0){ %>

    <div class="d-md-flex gap-2 justify-content-center align-items-center">
        <div class="cart-container col-12 col-md-6">
            <div class="cart-heading">
                <h3 class="display-5 my-3 text-muted">My Cart</h3>
            </div>
            <div class="cart-items">
                <% cart.forEach((item, index)=>{ %> <%-
                include("../../Components/cart_item.ejs", {item}) %> <% }) %>
            </div>

            <div class="d-nne cart-summary float-end fs-4 my-4">
                <span class="text-total text-danger fw-bold"> Total: </span>
                <span class="text-total-price cart-total">
                    <%= "$" + cartTotal.toLocaleString() %>
                </span>
            </div>
            <button
                class="cart-cta my-5 p-3 d-flex justify-content-between align-items-center btn btn-dark btn-order col-12 fs-4 my-4"
            >
                <span class="fs-4"> Set an order </span>
                <span class="text-total-price cart-total">
                    <%= "$" + cartTotal.toLocaleString() %>
                </span>
            </button>
        </div>

        <section id="addressForm" class="shipping-info col-12 col-md-6 col-lg-4">
            <%-include("../../Components/address_form_2.ejs", {currentUser, deliveryFee}) %>
        </section>
    </div>

    <% } else{ %>
    <div class="cart-container col-12 col-md-6">
        <div class="empty-cart-image">
            <img
                src="/IMG/empty-cart.jpg"
                alt="empty cart-items"
                class="img-fluid object-fit-cover"
            />
        </div>
        <a href="/" class="my-3 btn btn-outline-dark btn-lg">
            Continue Shopping
        </a>
    </div>
    <% } %>
    
    
    
</section>
<script src="/JS/cart.js"></script>