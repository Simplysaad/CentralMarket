<section id="featuredCombos" class="overflow-hidden my-4">
  <div class="category-heading">
    <h4 class="display-6 text-heading">Featured Combos</h4>
  </div>
  <div class="d-flex p-2 gap-4 overflow-scroll">

    <% featuredProducts.forEach((product, index)=>{ %>
      <%- include("../../Components/featured_card.ejs", { product }) %>
        <% }) %>
  </div>
</section>
<section id="discountedProducts" class="overflow-hidden my-4">
  <div class="category-heading">
    <h4 class="display-6 text-heading">Hot deals</h4>
  </div>
  <div class="d-flex p-2 gap-4 overflow-scroll">

    <% discountedProducts.forEach((product, index)=>{ %>
      <%- include("../../Components/normal_card.ejs", { product }) %>
        <% }) %>
  </div>
</section>
<section id="newArrivals" class="overflow-hidden my-4">
  <div class="category-heading">
    <h4 class="display-6 text-heading text-capitalize">New arrivals</h4>
  </div>
  <div class="d-flex p-2 gap-4 overflow-scroll">

    <% newArrivals.forEach((product, index)=>{ %>
      <%- include("../../Components/normal_card.ejs", { product }) %>
        <% }) %>
  </div>
</section>

<% categories?.forEach((category)=>{ %>
  <section id="<%= category.split().join('-') %>" class="overflow-hidden my-4">
    <div class="category-heading">
      <h4 class="display-6 text-heading text-capitalize">
        <a href="/category/<%= category %>" class="">
          <%= category %>
        </a>
      </h4>
      <a href="/category/<%= category %>" class="text-decoration-none ">
        <i class="fa fa-arrow-right"></i>
      </a>
    </div>
    <div class="d-flex p-2 gap-4 overflow-scroll">

      <% allProducts.filter(product=> product.category === category)?.forEach(product=>{ %>
        <%- include("../../Components/normal_card.ejs", { product }) %>
          <% }) %>
    </div>
  </section>
  <% }) %>


    <script src="/JS/homepage.js"></script>