<section class="col-12">
    <div class="toast" id="messageToastCont">
        <div class="toast-body d-flex gap-3">
            <i class="fa fa-times" id="messageToastIcon"> </i>
            <span class="fs-6" id="messageToastText"> </span>
        </div>
    </div>

            <form
                id="storeForm"
                action="/vendor/store"
                method="post"
                enctype="multipart/form-data"
                class="container py-5"
                novalidate
            >
                <legend id="" class="display-6 fw-semibold mb-4">
                    <span class="d-block fw-light text-muted fs-6 mb-1"
                        >Vendor Information</span
                    >
                    Register store
                </legend>

                <!-- Toast Notification -->
                <div
                    id="messageToastCont"
                    class="toast position-fixed top-0 end-0 m-3"
                    role="alert"
                    aria-live="assertive"
                    aria-atomic="true"
                >
                    <div class="toast-body d-flex align-items-center gap-2">
                        <i
                            id="messageToastIcon"
                            class="fa fa-times text-danger"
                            aria-hidden="true"
                        ></i>
                        <span id="messageToastText" class="fs-6">hellow</span>
                    </div>
                </div>

                <!-- Vendor Information Section -->
                <section aria-labelledby="vendorInfoLegend" class="mb-5">
                    <fieldset id="storeInfo" class="border rounded-3 p-4">
                        <!-- Cover Image Upload -->
                        <div class="mb-4 d-flex flex-column">
                            <!-- <label for="coverImage" class="form-label fw-semibold">Store Cover Image</label> -->
                            <input
                                type="file"
                                accept="image/*"
                                id="coverImage"
                                hidden=""
                                name="coverImage"
                                class="form-control mb-3"
                                aria-describedby="coverImageHelp"
                            />
                            <label for="coverImage" class="text-center">
                                <img
                                    src="./Public/IMG/image-2.jpg"
                                    alt="Cover image preview"
                                    id="coverImagePreview"
                                    class="img-fluid rounded shadow-sm"
                                    style="max-height: 200px"
                                />
                            </label>
                            <small
                                id="coverImageHelp"
                                class="form-text text-center text-danger error-message"
                                >Click the input above to upload a cover
                                photo.</small
                            >
                        </div>

                        <legend
                            id="storeInfoLegend"
                            class="fs-4 fw-semibold my-4"
                        >
                            Store Information
                        </legend>

                        <!-- Store Details -->
                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="storeName"
                                name="name"
                                required
                                placeholder="Store name"
                            />
                            <label for="storeName">Store name</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>

                        <div class="form-floating mb-3">
                            <textarea
                                class="form-control"
                                id="storeDesc"
                                name="description"
                                required
                                placeholder="Store description"
                                style="height: 100px"
                            ></textarea>
                            <label for="storeDesc">Store description</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>

                        <!-- Social Contacts -->
                        <div class="form-floating mb-3">
                            <input
                                type="tel"
                                class="form-control"
                                id="phoneNumber"
                                name="phoneNumber"
                                required
                                placeholder="Whatsapp number"
                            />
                            <label for="phoneNumber">Whatsapp number</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>

                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="instagram"
                                name="instagram"
                                placeholder="Instagram username (optional)"
                            />
                            <label for="instagram"
                                >Instagram username (optional)</label
                            >
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>
                    </fieldset>
                </section>

                <!-- Bank Information Section -->
                <section aria-labelledby="bankInfoLegend" class="mb-5">
                    <fieldset class="border rounded-3 p-4">
                        <legend
                            id="bankInfoLegend"
                            class="fs-4 fw-semibold mb-4"
                        >
                            Bank Information
                        </legend>

                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="bankName"
                                name="bankName"
                                required=""
                                placeholder="Bank name"
                            />
                            <label for="bankName">Bank name</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>
                        <div class="form-floating mb-3">
                            <input
                                type="number"
                                class="form-control"
                                id="accountNumber"
                                required=""
                                name="accountNumber"
                                placeholder="Account number"
                            />
                            <label for="accountNumber">Account number</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>

                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="accountName"
                                required
                                name="accountName"
                                placeholder="Account name"
                            />
                            <label for="accountName">Account name</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>
                    </fieldset>
                </section>

                <!-- Location Information Section -->
                <section aria-labelledby="locationInfoLegend" class="mb-5">
                    <fieldset class="border rounded-3 p-4">
                        <legend
                            id="locationInfoLegend"
                            class="fs-4 fw-semibold mb-4"
                        >
                            Location Information
                        </legend>
                        <div class="form-floating mb-4">
                            <input
                                type="text"
                                class="form-control"
                                id="address_1"
                                required=""
                                name="address_1"
                                placeholder="Street Address"
                            />
                            <label for="address">Street Address</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>
                        <div class="form-floating mb-4">
                            <input
                                type="text"
                                class="form-control"
                                id="address_2"
                                required=""
                                name="address_2"
                                placeholder="landmark"
                            />
                            <label for="address_2">Landmark </label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>
                        <div class="form-floating mb-3">
                            <select
                                class="form-select"
                                id="state"
                                required
                                name="state"
                                aria-label="Select state"
                            >
                                <option value="" selected>Select state</option>
                                <option value="Abia">Abia</option>
                                <option value="Adamawa">Adamawa</option>
                                <option value="Akwa Ibom">Akwa Ibom</option>
                                <option value="Anambra">Anambra</option>
                                <option value="Bauchi">Bauchi</option>
                                <option value="Bayelsa">Bayelsa</option>
                                <option value="Benue">Benue</option>
                                <option value="Borno">Borno</option>
                                <option value="Cross River">Cross River</option>
                                <option value="Delta">Delta</option>
                                <option value="Ebonyi">Ebonyi</option>
                                <option value="Edo">Edo</option>
                                <option value="Ekiti">Ekiti</option>
                                <option value="Enugu">Enugu</option>
                                <option value="FCT">
                                    Federal Capital Territory (Abuja)
                                </option>
                                <option value="Gombe">Gombe</option>
                                <option value="Imo">Imo</option>
                                <option value="Jigawa">Jigawa</option>
                                <option value="Kaduna">Kaduna</option>
                                <option value="Kano">Kano</option>
                                <option value="Katsina">Katsina</option>
                                <option value="Kebbi">Kebbi</option>
                                <option value="Kogi">Kogi</option>
                                <option value="Kwara">Kwara</option>
                                <option value="Lagos">Lagos</option>
                                <option value="Nasarawa">Nasarawa</option>
                                <option value="Niger">Niger</option>
                                <option value="Ogun">Ogun</option>
                                <option value="Ondo">Ondo</option>
                                <option value="Osun">Osun</option>
                                <option value="Oyo">Oyo</option>
                                <option value="Plateau">Plateau</option>
                                <option value="Rivers">Rivers</option>
                                <option value="Sokoto">Sokoto</option>
                                <option value="Taraba">Taraba</option>
                                <option value="Yobe">Yobe</option>
                                <option value="Zamfara">Zamfara</option>
                            </select>
                            <label for="state">State</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>

                        <div class="form-floating mb-3">
                            <input
                                type="text"
                                class="form-control"
                                id="lga"
                                required=""
                                name="lga"
                                placeholder="LGA"
                            />
                            <label for="lga">LGA</label>
                            <small
                                class="text-danger error-message"
                                aria-live="polite"
                            ></small>
                        </div>
                    </fieldset>
                </section>

                <!-- Submit Button -->
                <div class="d-flex justify-content-end">
                    <button
                        id="btnSubmitStore"
                        type="submit"
                        class="btn btn-primary px-4"
                    >
                        Register Store
                    </button>
                </div>
            </form>
</section>

<script src="/JS/store.js"></script>
