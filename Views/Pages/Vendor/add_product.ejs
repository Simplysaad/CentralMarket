<section class="col-12">
    <form
        action="/vendor/products/add"
        id="addProductsForm"
        method="post"
        class="form vh-100 justify-content-center align-items-center d-md-flex"
    >
        <section class="col-md-6 d-flex flex-column gap-3">
            <fieldset class="my-5 p-2 d-flex flex-column gap-3">
                <legend class="display-6 fw-semibold text-start">
                    <span class="d-block fw-light text-muted fs-6">
                        Meta data
                    </span>
                    Product Information
                </legend>
                <div class="form-floating">
                    <input
                        type="text"
                        placeholder=""
                        required
                        class="form-control"
                        name="name"
                        id="productName"
                        value=""
                    />
                    <label for="productName">Name</label>
                </div>
                <div class="form-floating">
                    <textarea
                        type="text"
                        placeholder=""
                        required
                        class="form-control input-desc"
                        name="description"
                        id="productDesc"
                        value=""
                    ></textarea>
                    <label for="productDesc">Description</label>
                </div>
                <div class="d-flex gap-1">
                    <div class="form-floating col-8">
                        <input
                            type="number"
                            class="form-control"
                            name="price"
                            id="productPrice"
                            placeholder=""
                            value=""
                        />
                        <label for="productPrice">Price</label>
                    </div>
                    <div class="form-floating col-4">
                        <input
                            type="number"
                            class="form-control"
                            name="discount"
                            id="productDiscount"
                            placeholder=""
                            value=""
                        />
                        <label for="productDiscount"
                            >Discount</label
                        >
                    </div>
                </div>
            </fieldset>
            <fieldset class="my-5 p-2 d-flex flex-column gap-3">
                <legend class="display-6 fw-semibold text-start">
                    <span class="d-block fw-light text-muted fs-6">
                        Meta Information
                    </span>
                    Product Information
                </legend>

                <div class="form-floating">
                    <input
                        type="text"
                        name="category"
                        id="productCategory"
                        value=""
                        placeholder=""
                        list="categoryList"
                        class="form-control"
                    />

                            <datalist id="tagsList">
          <% categories.forEach((tag, index)=>{ %>
            <option value="tag">
              <%= tag %>
            </option>
            <% }) %>
        </datalist>

                    <label for="category">Category</label>
                </div>
                <div class="border p-1">
                    <div class="selected-tags">
                        <ul
                            id="selectedTagsList"
                            class="d-flex border-bottom flex-wrap gap-2 list-unstyled"
                        >
                            <li
                                class="p-2 position-relative top-50"
                            >
                                Separate tags with commas
                            </li>
                        </ul>
                    </div>
                    <div class="tag-input">
                        <input
                            type="text"
                            id="tagInput"
                            list="tagsList"
                            placeholder="Keywords"
                            class="form-control m-0 border-0"
                        />
                    </div>
                    <datalist id="tagsList">
                      <%# keywordsList.forEach((keyword, index)=>{ %>
                        <option value="<%#=keyword %>" class="">
                            <%#=keyword %>
                        </option>
                      <%# }) %>
                    </datalist>
                </div>
                <div class="border p-1">
                    <div class="selected-colors">
                        <ul
                            id="selectedColorsList"
                            class="d-flex border-bottom flex-wrap gap-2 list-unstyled"
                        >
                            <li
                                class="p-2 position-relative top-50"
                            >
                                Separate colors with commas
                            </li>
                        </ul>
                    </div>
                    <div class="color-input">
                        <input
                            type="text"
                            id="colorInput"
                            list="colorsList"
                            placeholder="Colors"
                            class="form-control m-0 border-0"
                        />
                    </div>
                </div>
                <div class="border p-1">
                    <div class="selected-sizes">
                        <ul
                            id="selectedSizesList"
                            class="d-flex border-bottom flex-wrap gap-2 list-unstyled"
                        >
                            <li
                                class="p-2 position-relative top-50"
                            >
                                Separate tags with commas
                            </li>
                        </ul>
                    </div>
                    <div class="size-input">
                        <input
                            type="text"
                            id="sizeInput"
                            placeholder="sizes"
                            class="form-control m-0 border-0"
                        />
                    </div>
                </div>
                <div class="form-floating">
                    <input
                        type="number"
                        name="amountInStock"
                        id="amountInStock"
                        value=""
                        placeholder=""
                        class="form-control"
                    />

                    <label for="amountInStock"
                        >Amount in stock</label
                    >
                </div>
            </fieldset>
        </section>
        <section
            class="col-md-6 d-flex flex-grow-1 flex-column gap-3"
        >
            <fieldset class="my-5 p-2 d-flex flex-column gap-3">
                <legend class="display-6 fw-semibold text-start">
                    <span class="d-block fw-light text-muted fs-6">
                        Add product images
                    </span>
                    Product Information
                </legend>
                <div
                    class="single-image-container col-8 col-md-6 col-lg-4 mx-auto border dotted"
                >
                    <label for="productImage">
                        <img
                            id="productImagePreview"
                            class="img-fluid object-fit-cover"
                            src="/IMG/add-image-icon.png"
                            alt=""
                        />
                    </label>
                    <input
                        type="file"
                        accept="image/*"
                        name="productImage"
                        id="productImage"
                        hidden
                        value=""
                    />
                </div>
                <!-- <div
                    class="extra-photos d-flex gap-3 overflow-scroll"
                >
                    <div
                        class="single-image-container col-5 col-md-4 col-lg-3 mx-auto border rounded"
                    >
                        <label for="productGallery_1">
                            <img
                                id="productGalleryPreview_1"
                                class="img-fluid object-fit-cover product-gallery-preview"
                                src="./Public/IMG/add-image-icon.png"
                                alt=""
                            />
                        </label>
                        <input
                            type="file"
                            accept="image/*"
                            name="productGallery"
                            id="productGallery_1"
                            hidden
                            class="product-gallery"
                            value=""
                        />
                    </div>
                </div> -->
            </fieldset>
            <div
                class="cta my-5 col-12 float-lg-end d-flex flex-column flex-md-row align-items-center gap-3"
            >
                <button
                    id="btnDraft"
                    class="btn btn-outline-dark btn-lg col-12 col-md-5 col-lg-4"
                >
                    Save draft
                </button>
                <button
                    id="btnSubmit"
                    class="btn btn-dark btn-lg col-12 col-md-5 col-lg-4"
                    type="submit"
                >
                    Add product
                </button>
            </div>
        </section>
    </form>
</section>
<script src="/JS/addProduct.js"></script>