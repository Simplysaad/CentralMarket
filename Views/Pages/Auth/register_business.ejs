<section class="col-12">
  <div class="toast" id="messageToastCont">
    <div class="toast-body d-flex gap-3">
      <i class="fa fa-times" id="messageToastIcon"> </i>
      <span class="fs-6" id="messageToastText"> </span>
    </div>
  </div>
  
  <button id="btnPrev" class="btn-danger-outline btn">prev</button>
  
  <form id="registerForm" action="/auth/register?register_business=true&userId=<%= savedUser._id %>" method="post" enctype="multipart/form-data"
                                                                                                                          class="d-flex flex-column justify-content-center align-items-center">
    <div class="logo">
      <h2 class="display-5 text-end text-dark fw-semibold"></h2>
    </div>
    <div class="toast mt-5 fixed-top" id="messageToastCont">
      <div class="toast-body gap-1 justify-content-between align-items-center d-flex">
        <i id="messageToastIcon" class="fa fa-times text-danger"> </i>
        <span class="fs-6" id="messageToastText"> hello </span>
      </div>
    </div>
    <fieldset id="accountInfo" class="fieldset my-5 p-2 d-flex flex-column gap-3">
      <legend class="display-5 fw-semibold text-start">
        <span class="d-block fw-light text-muted fs-6">
          Business Information
        </span>
        Register business
      </legend>
      <div class="form-floating">
        <input type="text" name="name" id="name" required="" minlength="3" aria-required="true" class="form-control" placeholder=""
                                                                                                                                value="" />
        <label for="name">Business name</label>
      </div>
      <div class="form-floating">
        <textarea type="" name="description" required id="businessDesc" class="form-control" placeholder="Business description"
                                                                                                                                value=""></textarea>
        <!-- <label for="businessDesc">Business description</label> -->
      </div>
      <div class="border p-1">
        <div class="selected-tags">
          <ul id="selectedTagsList" class="d-flex border-bottom flex-wrap gap-2 list-unstyled">
            <li class="p-2 position-relative top-50">
              Separate tags with commas
            </li>
          </ul>
        </div>
        <div class="tag-input">
          <input type="text" id="tagInput" list="tagsList" placeholder="Keywords" class="form-control m-0 border-0" />
        </div>
        <datalist id="tagsList">
          <% categories.forEach((tag, index)=>{ %>
            <option value="tag">
              <%= tag %>
            </option>
            <% }) %>
        </datalist>
      </div>
      
      <div class="form-floating">
        <input type="url" name="socials" id="socialsLink" required="" aria-required="true" class="form-control" placeholder=""
                                                                                                                                value="" />
        <label for="socialsLink">Social Link</label>
      </div>
      
      <div class="d-flex gap-2">
        <p id="acceptTerms" class="fs-6 px-1 my-3 mx-auto text-cnter">
          By clicking submit, you agree to our
          <a class="px-1" href="/docs/privacy"> login! </a>
        </p>
      </div>
      
      <div class="cta col-12">
        <button class="btn btn-outline-dark btn-lg float-end" id="btnNext_accountInfo" type="button">
          Submit
          <i class="fa fa-arrow-right"> </i>
        </button>
      </div>
    </fieldset>
  </form>
</section>

<script src="/JS/register.js"></script>