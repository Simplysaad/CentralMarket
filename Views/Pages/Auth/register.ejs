<section class="col-12">
    <div class="toast" id="messageToastCont">
        <div class="toast-body d-flex gap-3">
            <i class="fa fa-times" id="messageToastIcon"> </i>
            <span class="fs-6" id="messageToastText"> </span>
        </div>
    </div>

    <button id="btnPrev" class="btn-danger btn">prev</button>

    <form
        id="registerForm"
        action="/auth/register"
        method="post"
        enctype="multipart/form-data"
        class="d-flex flex-column justify-content-center align-items-center"
    >
        <div class="logo">
            <h2 class="display-5 text-end text-dark fw-semibold"></h2>
        </div>
        <div class="toast mt-5 fixed-top" id="messageToastCont">
            <div
                class="toast-body gap-1 justify-content-between align-items-center d-flex"
            >
                <i id="messageToastIcon" class="fa fa-times text-danger"> </i>
                <span class="fs-6" id="messageToastText"> hello </span>
            </div>
        </div>
        <fieldset
            id="accountInfo"
            class="fieldset my-5 p-2 d-flex flex-column gap-3"
        >
            <legend class="display-5 fw-semibold text-start">
                <span class="d-block fw-light text-muted fs-6">
                    Account Information
                </span>
                Create account
            </legend>
            <div class="form-floating">
                <input
                    type="text"
                    name="name"
                    id="name"
                    required=""
                    minlength="3"
                    aria-required="true"
                    class="form-control"
                    placeholder=""
                    value=""
                />
                <label for="name">Full name</label>
            </div>
            <div class="form-floating">
                <input
                    type="email"
                    name="emailAddress"
                    required
                    id="emailAddress"
                    class="form-control"
                    placeholder=""
                    value=""
                />
                <label for="emailAddress">Email address</label>
            </div>
            <div class="form-floating">
                <input
                    type="tel"
                    name="phoneNumber"
                    id="phoneNumber"
                    required=""
                    aria-required="true"
                    class="form-control"
                    placeholder=""
                    value=""
                />
                <label for="phoneNumber">Phone number</label>
            </div>

            <div class="form-floating">
                <input
                    type="password"
                    name="password"
                    id="password"
                    required=""
                    aria-required="true"
                    class="form-control password"
                    placeholder=""
                    value=""
                />
                <label for="password">Password</label>
            </div>
            <a type="button" class="" id="btnShowPassword">
                <i class="fa fa-eye"> </i>
            </a>
            <div class="form-floating">
                <input
                    type="password"
                    name="confirmPassword"
                    id="confirmPassword"
                    required=""
                    aria-required="true"
                    class="form-control password"
                    placeholder=""
                    value=""
                />
                <label for="confirmPassword">Confirm password</label>
            </div>

            <div class="d-flex gap-2">
                <p id="acceptTerms" class="fs-6 px-1 my-3 mx-auto text-cnter">
                    Already have an account?
                    <a class="px-1" href="/auth/login"> login! </a>
                </p>
            </div>

            <div class="cta col-12">
                <a
                    class="btn btn-outline-dark btn-lg float-end"
                    id="btnNext_accountInfo"
                    type="button"
                >
                    Next
                    <i class="fa fa-arrow-right"> </i>
                </a>
            </div>
        </fieldset>
        <fieldset
            id="personalInfo"
            class="fieldset my-5 p-2 d-flex flex-column gap-3"
        >
            <legend class="display-5 fw-semibold text-start">
                <span class="d-block fw-light text-muted fs-6">
                    Personal Information
                </span>
                Create account
            </legend>
            <div class="border overflow-hidden mx-auto my-3 col-6 col-lg-4 rounded-circle">
                <label
                    for="profileImage"
                    id="profileImageCont"
                    class="overflow-hidden"
                >
                    <img
                        src="/IMG/add-profileImage.jpg"
                        id="profileImagePreview"
                        alt=""
                        class="rounded-circle img-fluid w-100 h-auto"
                    />
                </label>
                <input
                    type="file"
                    name="profileImage"
                    id="profileImage"
                    hidden
                    accept="image/*"
                    
                    aria-hidden="true"
                />
            </div>
            <div class="col-12 d-block flex-fill">
                <span class="fs-6 text-muted">Gender</span>

                <div class="d-flex justify-content-between">
                    <div class="form-check col-5 rounded border">
                        <input
                            type="radio"
                            name="gender"
                            id="name_male"
                            hidden
                            checked
                            class="checkbox"
                            placeholder=""
                            value="male"
                        />
                        <label class="form-check-label p-3" for="name_male">
                            Male
                        </label>
                    </div>
                    <div class="form-check col-5 rounded border">
                        <input
                            type="radio"
                            name="gender"
                            id="name_female"
                            hidden
                            class="checkbox"
                            placeholder=""
                            value="female"
                        />
                        <label class="form-check-label p-3" for="name_female">
                            Female
                        </label>
                    </div>
                </div>
            </div>
            <div class="col-12 d-block flex-fill">
                <span class="fs-6 text-muted">Birthday</span>
                <div class="d-flex gap-2 justify-content-start">
                    <div class="form-floating col-8">
                        <input
                            type="date"
                            name="birthDate"
                            id="birthDate"
                            required=""
                            max="2010-01-01"
                            aria-describedby="Birthday"
                            aria-required="true"
                            class="form-control"
                            placeholder=""
                            value=""
                        />
                        <label for="birthDate">Birthday</label>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <p id="acceptTerms" class="fs-6 px-1 my-3 mx-auto text-cnter">
                    Already have an account?
                    <a class="px-1" href="/auth/login"> login! </a>
                </p>
            </div>

            <div class="cta col-12">
                <a
                    class="btn btn-outline-dark btn-lg float-end"
                    type="button"
                    id="btnNext_personalInfo"
                >
                    Next
                    <i class="fa fa-arrow-right"> </i>
                </a>
            </div>
        </fieldset>
