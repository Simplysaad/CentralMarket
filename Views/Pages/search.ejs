
<div class="category-heading d-flex flex-wrap align-items-center justify-content-between">
  <h3 class="category-title display-5">"<%=searchResults.searchResults_products.length + searchResults.searchResults_business.length %>" <%- searchResults.length > 1? "Results" : "Result"%>  for "<%= searchTerm %>"</h3>
</div>



<section id="businessDisplay">
  <% if(searchResults.searchResults_business.length > 0){ %>
  <div class="category-heading d-flex flex-wrap align-items-center justify-content-between">
    <h3 class="category-title text-upper text-muted fs-4">
      Businesses
    </h3>
  </div>

  <% searchResults.searchResults_business.forEach(user =>{ %>
   <div class="result-box border my-3 m-1 p-2 d-flex justify-content-center align-items-center">
     <div class="result-image col-3 p-1 ">
       <img src="<%= user.profileImage %>" alt="img" style="height: 60px; width: 60px;" class="border bg-secodary rounded-circle img-fluid">
     </div>
     <div class="result-info col-8">
       <h4 class="result-heading my-0 fs-5"><a href="/store/<%= user._id %>">  <%= user.businessName %> </a></h4>
       <p class="result-text text-muted my-0 fs-6"><%= user.username %></p>
     </div>
  </div>
  <% }) %>
  <% } %>
</section>


<section id="productDisplay" class="container my-4 product-display">
    <div class=" mt-3">
      <%if(searchResults.searchResults_products.length > 0){ %>
        <div class="category-heading d-flex flex-wrap align-items-center justify-content-between">    
        <h3 class="category-title text-upper text-muted fs-4">
            products
          </h3>
        </div>

      <div class="d-flex flex-wrap overflow-scroll category-items">
        <% searchResults.searchResults_products.forEach((product)=> {%>
        <div class="col-6 col-md-4 col-lg-3 p-0 m-md-3  product-card rounded">
          <div class="card-image m-0 p-3">
            <img src="<%= product.productImage %>" alt="<%= product.name %>" class="random-colo overflow-hidden img-fluid" />
          </div>
          <div class="card-body p-0 m-2">
            <a href="/preview/<%=product._id %>" class="text-dark d-block text-decoration-none fs-6 card-title">
              <%=product.name %>
            </a>
            <div class="">
              <span class="card-price fs-5">
                <%= product.price %>
              </span>
              <s class="old-price fs-6 text-danger">
                <%= product.price %>
              </s>
            </div>
          </div>
        </div>
        <% }) %>
    </div>
      <% } %>
  </div>
</section>