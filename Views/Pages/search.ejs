<section id="productDisplay" class="container my-4 product-display">
    <div class=" mt-3">
      <div class="category-heading d-flex flex-wrap align-items-center justify-content-between">
        <h3 class="category-title display-5">"<%=searchResults.length%>" <%- searchResults.length > 1? "Results" : "Result"%>  for "<%= searchTerm %>"</h3>
      </div>
      <div class="category-body flex-wrap pt-2">
        <% searchResults.forEach((product)=> {%>
            <div class="col-6 col-md-4 col-lg-3 p-0 mx- border product-card ">
              <div class="card-image m-0">
                <img src="<%= product.productImage %>" alt="<%= product.name %>" class="overflow-hidden img-fluid" />
            </div>
            <div class="card-body p-0 m-2">
              <p class="fs-6 card-title">
                <%= product.name %>
              </p>
              <div class="">
                <span class="card-price fs-5"
                  ><%- product.currency = "NGN"? "₦":product.currency  %><%= product.price %></span
                >
                <s class="old-price fs-6 text-danger"
                  ><%- product.currency = "NGN"? "₦":product.currency  %><%= product.price %></s
                >
              </div>
              <a
                href="/preview/<%= product._id %>"
                class="btn btn-view btn-secondary col-12"
                >
                View
              </a>
            </div>
          </div>

          <%
        }) %>
    </div>
  </div>
</section>