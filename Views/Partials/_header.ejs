<header class="navbar header navbar-light bg-light py-3">
    <div class="container-sm container-fluid">
      <div class="navbar-brand">
        <button id="btnShowSidebar" class="mx-0 btn btn-navbar-toggler">
          <i class="navbar-toggler-icon"></i>
        </button>
        <a href="/" class="navbar-brand text-decoration-none mx-0">Central Market</a>
      </div>
      <div class="options d-flex">
        <a id="btnShowSearch" class="option option-search text-end d-flex text-dark text-decoration-none">
          <span class="d-none d-md-inline text-muted">Search for your products</span>
          <i class="fas fa-search me-md-1"></i>
        </a>
        <a class="option d-flex text-dark text-decoration-none">
          <i class="fas fa-user me-md-1"></i>
        </a>
        <a class="option d-flex text-dark text-decoration-none">
          <i class="fas fa-cog me-md-1"></i>
        </a>
      </div>
    <div class="search-container col-10 px-3">
      <form action="/search" method="post" class="d-flex justify-content-center align-items-center">
        <input class="form-control col-9" list="searchSuggestions" type="search" placeholder="Search for products, categories and keywords">
        <button class="btn btn-search btn-success col-2 col-md-1">Go</button>
        <datalist id="searchSuggestions">
          <% if(locals.searchSuggestions){ %>
          <% locals.searchSuggestions.forEach(suggestion=>{ %>
            <option value="<%=suggestion.searchTerm%>"></option>
          <% }) %>
          <% } %>
        </datalist>
      </form>
    </div>
    <% if (categories) { %>
      <div class="mt-2 mb-0 px-2 horizontal-nav">
      <% categories.forEach(category => {
        %>
        <a href="/category/<%= category %>" class="horizontal-nav-link">
          <%= category %>
        </a>
        <%
      }) %>
    </div>
    <% } %>
    </div>
  </header>

