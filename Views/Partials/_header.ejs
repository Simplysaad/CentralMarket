  <header class="navbar header navbar-light bg-light py-3">
    <div class="container">
      <div class="navbar-brand">
        <button id="btnShowSidebar" class="mx-0 btn btn-navbar-toggler">
          <i class="navbar-toggler-icon"></i>
        </button>
        <a href="/" class="navbar-brand text-decoration-none mx-0">Central Market</a>
      </div>
      <div class="options d-flex">
        <a id="btnShowSearch" class="option option-search d-md-none text-end d-flex text-dark justify-content-between text-decoration-none">
          <i class="d-md-none fas fa-search"></i>
        </a>
        <form action="/search" class="option-search header-search search-box d-none col-5 d-md-flex justify-content-between align-items-center">
          <input name="searchTerm" list="searchSuggestions" class="search-input border-0 col-10 text-muted" placeholder="Search for products" type="search">
          <button class="border-0 fa fa-search col-md-1"></button>
        </form>
        <div class="dropdown">
          <a data-bs-toggle="dropdown" aria-expanded="false" class="dropdown-toggle btn option d-flex text-dark text-decoration-none">
            <i class="fas fa-user me-md-1"></i>
          </a>
          <ul class="dropdown-menu dropdown-menu-start">
            <li><a href="/vendor/account" class="dropdown-item">Account</a></li>
            <li><a href="/vendor/change-password" class="dropdown-item">Change Password</a></li>
            <p class="dropdown-divider"></p>
            <li><a href="/auth/logout" class="dropdown-item">Change Password</a></li>
          </ul>
        </div>
        <a class="option d-flex text-dark text-decoration-none">
          <i class="fas fa-bell fa-notification me-md-1"></i>
        </a>
      </div>
    </div>
    <div class="d-md-none d-sm-none search-container col-12 d-flex justify-content-center p-2">
      <form action="/search" class="d-flex search-group col-10 col-md-7 justify-content-between bg-back">
        <input list="searchSuggestions" type="search" class="search-input border p-1" name="searchTerm" id="searchTerm" placeholder="Search">
        <button class="btn btn-outline-success" type="submit">
          Go
        </button>
        <datalist id="searchSuggestions">
          <% if(locals.searchSuggestions){ %>
          <% locals.searchSuggestions.forEach(suggestion=>{ %>
            <option value="<%=suggestion.searchTerm%>"></option>
          <% }) %>
          <% } %>
        </datalist>
      </form>
    </div>
   <% if (categories) { %>
      <div class="mt-2 mb-0 px-2 horizontal-nav">
      <% categories.forEach(category => {
        %>
        <a href="/category/<%= category %>" class="horizontal-nav-link">
          <%= category %>
        </a>
        <%
      }) %>
    </div>
    <% } %>

  </header>
