    <div class="text-heading">
        <h3 class="fs-5 fw-light text-capitalize p-2">Account</h3>
    </div>
    <ul
        class="list-unstyled text-capitalize d-flex flex-column gap-2 side-nav-menu"
    >
        <li
            class="nav-item p-2 d-flex align-items-center justify-content-start gap-2"
        >
            <i class="fa fa-shopping-cart"> </i>
            <a class="nav-link" href="/account/cart">Cart</a>
        </li>
        <li
            class="nav-item p-2 d-flex align-items-center justify-content-start gap-2"
        >
