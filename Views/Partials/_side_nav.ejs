        </li>
        <li
            class="nav-item p-2 d-flex align-items-center justify-content-start gap-2"
        >
            <i class="fa fa-naira-sign"> </i>
            <a class="nav-link" href="/account/transactions"
                >transactions</a
            >
        </li>
    </ul>
</div>
<div id="categories" class="border-bottom">
    <div class="text-heading">
        <h3 class="fs-5 fw-light text-capitalize p-2">Account</h3>
    </div>
    <ul
        class="list-unstyled text-capitalize d-flex flex-column gap-2 side-nav-menu"
    >
        <% if (locals.categories) { %>

        <ul class="list-unstyled d-flex flex-column gap-2 side-nav-menu">
            <% locals.categories.forEach(category=> { %>
            <li
                class="nav-item p-2 d-flex align-items-center justify-content-start gap-2"
            >
                <i class="fa fa-tag"> </i>
                <a class="nav-link" href="/category/<%= category %>"><%= category %></a>
            </li>
            <% }) %>
        </ul>
        <% } %>
    </ul>
</div>
