<section id="filterForm" class="d-flex gap-2">

    <a href="/search?searchTerm=<%= searchTerm %>" class="btn btn-outline-dark rounded-pill">
        All
    </a>
    <a href="/search?searchTerm=<%= searchTerm %>&filter=products" class="btn btn-outline-dark rounded-pill">
        Products
    </a>
    <a href="/search?searchTerm=<%= searchTerm %>&filter=services" class="btn btn-outline-dark rounded-pill">
        Services
    </a>
</section>

<script>
    let anchorTags = document.querySelectorAll("a")

    anchorTags.forEach((tag, index)=>{
        if(tag.href === window.location.href){
            tag.classList.replace("btn-outline-dark", "btn-dark")
            tag.ariaDisabled = true
            tag.href = '#'
        }
    })
</script>