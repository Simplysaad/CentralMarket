<form id="searchForm"
    class="border d-flex justify-content-between border-2 justify-content-center align-items-center rounded-pill"
    action="/search">
    <input type="search" name="searchTerm" id="searchTerm" required list="searchSuggestions"
        placeholder="Search for anything..." class="w-100 border-0 form-control px-3 py-1 bg-transparent border-0"
        value="<%= typeof searchTerm !== 'undefined' ? searchTerm : '' %>" />
    <datalist id="searchSuggestions"> </datalist>
    <button type="submit" for="searchTerm" class="p-2 bg-transparent border-0 ">
        <i class="fa-solid  fa-search"></i>
    </button>
</form>