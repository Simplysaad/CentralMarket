<style>
    .content {
        margin-left: 260px;
    }

    .content .dashboard-card {
        margin-bottom: 20px;
    }
</style>

<!-- Content -->
<section class="content container-fluid">
    <!-- Dashboard Header -->
    <div class="row mt-4">
        <div class="col-12">
            <h1>Welcome, Vendor!</h1>
            <p class="lead">Manage your store and track performance.</p>
        </div>
    </div>

    <!-- Dashboard Cards -->
    <div class="row">
        <!-- Sales Summary -->
        <div class="col-md-4">
            <div class="card dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Sales Summary</h5>
                    <p class="card-text">Total Sales: ₦500,000</p>
                    <p class="card-text">Orders Processed: 150</p>
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="col-md-4">
            <div class="card dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Recent Orders</h5>
                    <ul class="list-unstyled">
                        <li>
                            <i class="fas fa-check-circle"></i> Order #1234 -
                            ₦5,000
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i> Order #1235 -
                            ₦3,500
                        </li>
                        <li>
                            <i class="fas fa-check-circle"></i> Order #1236 -
                            ₦7,000
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Low Stock Alert -->
        <div class="col-md-4">
            <div class="card dashboard-card">
                <div class="card-body">
                    <h5 class="card-title">Low Stock Alert</h5>
                    <ul class="list-unstyled">
                        <li>
                            <i class="fas fa-exclamation-triangle"></i>
                            Product A - 2 left
                        </li>
                        <li>
                            <i class="fas fa-exclamation-triangle"></i>
                            Product B - 3 left
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Management Section -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Manage Your Products</h5>
                    <a href="/vendor/products/add" class="btn btn-primary"
                        >Add New Product</a
                    >
                    <a href="/vendor/products" class="btn btn-secondary"
                        >View Products</a
                    >
                </div>
            </div>
        </div>
    </div>
</section>

<section class="product-list my-5">
    <div class="table-heading py-4 top-0 position-relative">
        <h3 class="display-6">Top Products this month</h3>
    </div>
    <div class="product-table-container overflow-scroll">
        <table
            class="table table-hover overflow-scroll text-nowrap table-striped"
        >
            <thead>
                <tr>
                    <th>S/N</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Sold</th>
                    <th>Amount</th>
                    <th>Remaining</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% currentUserProducts.forEach(product=>{ %>
                <tr>
                    <td><% currentUserProducts.indexOf(product) + 1 %></td>
                    <td>
                        <a
                            class="text-decoration-none"
                            href="/preview/<%= product._id%>"
                        >
                            <%= product.name %>
                        </a>
                    </td>
                    <td><%= product.price %></td>
                    <td><%= product.amountSold * product.price %></td>
                    <td><%= product.amountSold %></td>
                    <td><%= product.amountInStock %></td>
                    <td class="d-flex g-2">
                        <a
                            onclick="editProduct(<%= product._id %>)"
                            class="btn btn-info mx-1"
                        >
                            <i class="fa fa-pencil"></i>
                        </a>
                        <a
                            onclick="deleteProduct(<%= product._id %>)"
                            class="btn btn-danger mx-1"
                        >
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                <% })%>
            </tbody>
        </table>
    </div>
</section>
