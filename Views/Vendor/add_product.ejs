<form
    action="/vendor/products/add"
    method="post"
    enctype="multipart/form-data"
    class="form-card col-md-8 my-5 col-lg-7"
>
    <section id="addProduct" class="p-2 p-md-3 border d-nne my-5">
        <div
            class="text-center my-5 justify-content-between align-items-center d-md-flex"
        >
            <h3 class="display-5 text-md-start text-center p-2">
                <i class="fa fa-store pe-3"></i>Add New Product
            </h3>

            <div class="btn-group text-md-end d-none d-md-inline-flex col-md-4">
                <a class="btn mx- btn-outline-danger">Discard changes</a>
                <button class="btn mx- btn-success">Add Product</button>
            </div>
        </div>

        <section id="generalInfo" class="my-5 mt-3">
            <h3 class="my-2 display-6">General Information</h3>

            <div class="for-floating my-3">
                <label for="productName" class="text-muted">
                    Product Name
                </label>
                <input
                    class="form-control p-3"
                    id="productName"
                    name="name"
                    type="text"
                    required
                    placeholder=""
                />
            </div>
            <div class="my-3">
                <label for="productDesc" class="text-muted">
                    Product Description
                </label>
                <textarea
                    class="form-control p-3"
                    id="productDesc"
                    name="description"
                    type="text"
                    required
                    cols="20"
                    rows="5"
                    placeholder=""
                ></textarea>
            </div>
            <div class="my-3">
                <label for="productName" class="text-muted"> Brand Name </label>
                <input
                    class="form-control p-3"
                    id="brand"
                    name="brand"
                    type="text"
                    placeholder=""
                />
            </div>

            <div class="my-3">
                <label for="productTags" class="text-muted"
                    >Tags(<i>separate tags with commas</i>)</label
                >
                <input
                    class="form-control p-3"
                    id="productTags"
                    name="productTags"
                    type="text"
                    required
                    placeholder=""
                />
            </div>
        </section>
        <section id="pricingAndStock" class="my-5">
            <h3 class="my-2 display-6">Pricing and Stock</h3>

            <div class="my-3">
                <label for="price" class="text-muted"> Base Price </label>
                <input
                    class="form-control p-3"
                    id="price"
                    name="basePrice"
                    type="number"
                    min="100"
                    required
                    placeholder=""
                />
            </div>
            <div class="my-3">
                <label for="discount" class="text-muted"> Discount % </label>
                <input
                    class="form-control p-3"
                    id="discount"
                    name="discount"
                    type="number"
                    max="100"
                    min="1"
                    placeholder=""
                />
            </div>
            <div class="my-3">
                <label for="discountType" class="text-muted">
                    Discount type
                </label>
                <input
                    class="form-control p-3"
                    id="discountType"
                    name="discountType"
                    type="text"
                    placeholder=""
                />
            </div>
            <div class="">
                <label for="amountInStock" class="text-muted">
                    Amount In Stock
                </label>
                <input
                    class="form-control p-3"
                    id="amountInStock"
                    name="amountInStock"
                    type="number"
                    min="1"
                    required
                    placeholder=""
                />
            </div>
        </section>
        <section id="ImageAndCategory" class="my-5">
            <h3 class="my-2 display-6">Add Image</h3>

            <div class="my-3">
                <label for="productImage" class="text-muted"
                    >Product Image</label
                >
                <input
                    class="form-control p-3"
                    id="productImage"
                    name="productImage"
                    type="file"
                    
                    accept="image/*"
                    required
                    placeholder=""
                />
            </div>
            <!--         <div class="">
    <input
        class="form-control"
        id="productGallery"
        name="productGallery"
        type="file"
        accept="image/*"
        multiple
        placeholder=""
    />
    <label for="productGallery">Product Gallery</label>
</div>
 -->
            <div class="my-3">
                <label ="category" class="text-muted">Category</label>
                <input
                    class="form-control p-3"
                    id="category"
                    name="category"
                    type="text"
                    required
                    placeholder=""
                    list="categoryList"
                />
                <datalist id="categoryList">
                    <% categories.forEach(category =>{ %>
                    <option value="<%=category %>"><%#=category %></option>
                    <% }) %>
                </datalist>
            </div>
            <div class="my-3">
                <label for="subCategory" class="text-muted">Sub-category</label>
                <input
                    class="form-control p-3"
                    id="subCategory"
                    name="subCategory"
                    type="text"
                    required
                    placeholder=""
                    list="subCategoryList"
                />
                <datalist id="subCategoryList">
                    <% subCategories.forEach(category =>{ %>
                    <option value="<%=category %>"><%=category %></option>
                    <% }) %>
                </datalist>
            </div>
        </section>

        <div
            class="text-end my-5 justify-content-end align-items-center d-md-none d-flex"
        >
            <div class="btn-grup col-md-5">
                <button type="reset" class="btn mx-2 btn-outline-danger">
                    Discard changes
                </button>
                <button class="btn mx-2 btn-success">Add Product</button>
            </div>
        </div>
    </section>
</form>
