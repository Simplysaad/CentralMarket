
<form action="/vendor/add-product" method="post" enctype="multipart/form-data" class="form-card col-md-8 my-5 col-lg-7 container">
  <section id="addProduct" class="p-5 border d-nne my-5">
    <h3 class="display-4 my-3 text-center">Add Product</h3>
    <div class="form-floating">
      <input class="form-control" id="productName" name="productName" type="text" required placeholder="" />
      <label for="productName">Product Name</label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="productDesc" name="description" type="text" required placeholder="" />
      <label for="productDesc">Product Description</label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="productTags" name="tags" type="text" required placeholder="" />
      <label for="productDesc">Product Tags <i>(separate tags with commas)</i></label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="price" name="price" type="number" required placeholder="" />
      <label for="price">Product Price</label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="category" name="category" type="text" required placeholder="" list="categoryList" />
      <datalist id="categoryList">
        <%- categoryList.forEach((category)=>{ %>
          <option value="<%=category %>"><%=category %></option>
        <% }) %>
      </datalist>
      <label for="category">Category</label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="subCategory" name="subCategory" type="text" required placeholder="" list="subCategoryList" />
      <datalist id="subCategoryList">
        <option value="mobile device">mobile device</option>
        <option value="series">series</option>
      </datalist>
      <label for="subCategory">Sub-category</label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="amountInStock" name="amountInStock" type="number" required placeholder="" />
      <label for="amountInStock">Amount In Stock</label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="productImage" name="productImage" type="file" accept="image/*" required placeholder="" />
      <label for="productImage">Product Image (JPEG, PNG, or GIF)</label>
    </div>
    <div class="form-floating">
      <input class="form-control" id="productGallery" name="productGallery" type="file" accept="image/*" multiple placeholder="" />
      <label for="productGallery">Product Gallery (JPEG, PNG, or GIF)</label>
    </div>
    <button id="" class="btn btn-lg btn-outline-success form-control clearfix col-5 mx-auto p-3" > Add Product </button>
  </section>
</form>
